extends layout

block content
  if (messages.length>0)
    div.alert.alert-danger= messages[0]

  div.container
    div.jumbotron.text-center
        h1
          span.fa.fa-medkit  CETAS
        p
        if (!user)
          a.btn.btn-default(href="/login") #[span.fa.fa-user #{language.index.login}]
        else
          p Inloggad som: #{user.firstname + ' ' + user.lastname + '  -' +  user.local.email} och är #{user.role}
          //- If you are patient you should be able to edit your profile and fill in forms
          if (user.role == 0)
              a.btn.btn-default(href="/myprofile") #[span.fa.fa-user Redigera min profil]
              a.btn.btn-default(href="/form") #[span.fa.fa-user Fyll i ett formulär]
          //- If you are a doctor you should be able to create patient accounts    
          if (user.role == 1)
              a.btn.btn-default(href="/signup") #[span.fa.fa-user Registrering]
              a.btn.btn-default(href="/api/patients") #[span.fa.fa-user Mina patienter]
          //- If you are an administrator you should be able to create all kinds of accounts
          if (user.role ==2)
              a.btn.btn-default(href="/signup") #[span.fa.fa-user Registrering]
          a.btn.btn-default(href="/logout") #[span.fa.fa-user Logga ut]

