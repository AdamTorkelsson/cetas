extends ../layout

block content
 div.container
  div.col-sm-6.col-sm-offset-3 
   h2  
     span.fa.fa-sign-in  Redigering profil - #{user.personal_number} 

 
   h3
   form(action='', method="post")
   
          input(type="hidden", name="id", value=user.id)
          
          div.form-group
            label Email
            input.form-control(type="text", name="email", value=user.local.email) 
          div.form-group           
            label Förnamn
            input.form-control(type="text", name="firstname", value=user.firstname)
          div.form-group   
            label Efternamn
            input.form-control(type="text", name="lastname" , value=user.lastname) 
          div.form-group          
            label adress1
            input.form-control(type="text", name="address1", value=user.address1)  
           div.form-group 
            label adress2
            input.form-control(type="text", name="address2", value=user.address2) 
          div.form-group           
            label POSTNR
            input.form-control(type="text", name="postalno", value=user.postalno) 
          div.form-group           
            label POSTORT
            input.form-control(type="text", name="city", value=user.city)          
          div.form-group           
            label mobiltelefon
            input.form-control(type="text", name="mobile", value=user.mobile)   

        button.btn.btn-warning.btn-lg(style="float: right;  margin-left:2%", type="submit") Inkomma
        
      button.btn.btn-warning.btn-lg(style="float: right; margin-left:2%", type="redirect" onclick="location.href = '/password';" ) Ändra lösenord

      button.btn.btn-warning.btn-lg(style="float: right", type="redirect" onclick="location.href = '/';" ) Tillbaka
       
