doctype html
html(ng-app='myApp' lang='sv')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title eSana
    script(src='/lib/jquery/dist/jquery.min.js')
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/lib/font-awesome/css/font-awesome.min.css')  
    link(rel='stylesheet', href='/css/styles.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:100')
    base(href='/')
  body
    header(ng-controller="MainCtrl as main")
      div#wrapper
        div#sidebar-wrapper
            h1(align = "center")
              span.fa.fa-medkit  eSana 
            div(ng-if="user.firstname", style ="float: right; margin-left:2%")
              p(ng-bind="language.index.loggedInAs+': '+ user.firstname + ' ' + user.lastname + '  - ' +  user.local.email")
              br
              //- If you are patient you should be able to edit your profile and fill in forms and change password
              div(ng-if="user.role == 0")
                a.btn.btn-default(ui-sref="patientform") #[span.fa.fa-user(ng-bind="language.index.form")]
                a.btn.btn-default(ui-sref="profile") #[span.fa.fa-user(ng-bind="language.index.myprofile")]
                a.btn.btn-default(href="/password") #[span.fa.fa-user(ng-bind="language.index.password")]
                a.btn.btn-default(href="/logout" ng-click="logout()") #[span.fa.fa-user(ng-bind="language.index.logout")]
              //- If you are a doctor you should be able to create patient accounts    
              div(ng-if="user.role == 1")
                a.button(href="/signup" style="text-decoration:none") #[span.buttontext(ng-bind="language.index.register")]
                a.button(href="/mypatients" style="text-decoration:none") #[span.buttontext(ng-bind="language.index.mypatients")]
                a.button(href="/password" style="text-decoration:none") #[span.buttontext(ng-bind="language.index.password")]
                a.buttonsign(href="/logout" ng-click="logout()" style="text-decoration:none") #[span.buttontext(ng-bind="language.index.logout")]
              //- If you are an administrator you should be able to create all kinds of accounts
              div(ng-if="user.role == 2")
                a.btn.btn-default(href="/signup") #[span.fa.fa-user(ng-bind="language.index.register")]
                a.btn.btn-default(href="/password") #[span.fa.fa-user(ng-bind="language.index.password")]
                a.btn.btn-default(href="/logout" ng-click="logout()") #[span.fa.fa-user(ng-bind="language.index.logout")]
        div#page-content-wrapper
            .container-fluid
              .row
                .col-md-12(ui-view)
    footer
    script(src='/lib/angular/angular.js')
    script(src='/lib/ui-router/release/angular-ui-router.js')
    script(src='/lib/angular-sanitize/angular-sanitize.js')
    script(src='/lib/angular-animate/angular-animate.js')
    script(src='/lib/angular-cookies/angular-cookies.js')
    

    script(src='/app/ngApp.js')
    script(src='/app/auth/auth.factory.js')
    script(src='/app/main/main.controller.js')  
    script(src='/app/home/home.js')
    script(src='/app/home/home.controller.js')
    script(src='/app/patients/patients.js')
    script(src='/app/patients/patients.controller.js')
    script(src='/app/login/login.js')
    script(src='/app/login/login.controller.js')
    script(src='/app/patientform/patientform.js')
    script(src='/app/patientform/patientform.controller.js')
    script(src='/app/profile/profile.js')
    script(src='/app/profile/profile.controller.js')

    script(src='http://localhost:35729/livereload.js')