block content  
  div.container
    div.col-sm-6.col-sm-offset-3
     h3
       span.fa.fa-sign-in Ändra lösenord

     .alert.alert-danger(ng-show="message" ng-bind="message")
     .col-md-6
       form(name="passwordform")
         div.form-group
           label {{language.password.password}}
           input.form-control(type="password", name="password" ng-model="pass.password" required)

         div.form-group
           label {{language.password.confirmPassword}}
           input.form-control(type="password", name="confirmpassword" ng-model="pass.confirmpassword" required)   

         button.buttonsubmit(style="float: right;  margin-left:2%" ng-click="submit(passwordform)") {{language.password.save}}
