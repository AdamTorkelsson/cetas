div#log
  div.col-sm-6.col-sm-offset-3
    h3
      span.fa.fa-sign-in  {{language.loginPage.login}}
    .alert.alert-danger(ng-if="message" ng-bind="message")
    form(name="login")
      div.form-group
        label.headertext {{language.loginPage.email}}
        input.form-control(type="email" ng-model="user.email" required)
      div.form-group
        label.headertext {{language.loginPage.password}}
        input.form-control(type="password" ng-model="user.password" required)
      button.buttonsubmit(ng-click="submit(login)" style="margin-left:auto; margin-right:auto") {{language.loginPage.login}}
